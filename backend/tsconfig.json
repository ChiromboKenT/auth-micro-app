{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@controllers": ["src/controllers"],
      "@controllers/*": ["src/controllers/*"],
      "@middlewares": ["src/middleware"],
      "@middlewares/*": ["src/middleware/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@repositories": ["src/repositories"],
      "@repositories/*": ["src/repositories/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
